{
	"compileOnSave": true,
	"compilerOptions": {
		"sourceMap": true,
		"module": "CommonJS",
		"declaration": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"target": "es5",
		"strict": true,
		"outDir": "dist",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"es2017",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"spec/**/*.spec.ts"
	]
}
