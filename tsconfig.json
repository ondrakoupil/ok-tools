{
	"compileOnSave": true,
	"compilerOptions": {
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"es2017",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts",
		"spec/**/*.spec.ts"
	],
	"exclude": [
		"node_modules"
	]
}
